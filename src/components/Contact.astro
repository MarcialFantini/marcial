---
import FormContact from "./FormContact.astro";
---

<section
  id="contact"
  class="py-12 md:py-24 lg:py-32 bg-neutral-900 bg-opacity-50 backdrop-filter backdrop-blur-sm relative"
>
  <div class="container mx-auto px-4 md:px-6">
    <h2
      class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-center mb-8"
    >
      Initiate Your Next Digital Venture
    </h2>
    <div class="grid gap-6 lg:grid-cols-2">
      <div
        class="bg-neutral-800 bg-opacity-30 border border-neutral-700 backdrop-filter backdrop-blur-sm rounded-lg p-6"
      >
        <FormContact />
      </div>
      <div class="space-y-4 h-full flex flex-col justify-between">
        <h3 class="text-2xl font-bold">Connect With Me</h3>
        <p class="flex items-center text-neutral-300">
          <svg
            class="w-5 h-5 mr-2 text-yellow-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path></svg
          >
          marcialfantinijs@gmail.com
        </p>
        <a href="https://www.linkedin.com/in/marcial-fantini-8692b8290/">
          <p class="flex items-center text-neutral-300">
            <svg
              class="w-5 h-5 mr-2 text-yellow-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
