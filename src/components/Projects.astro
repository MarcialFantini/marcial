---
import Image from "astro/components/Image.astro";

const projects = [1, 2, 3];
---

<section
  id="projects"
  class="py-12 md:py-24 lg:py-32 bg-neutral-900 bg-opacity-50 backdrop-filter backdrop-blur-sm relative"
>
  <div class="container mx-auto px-4 md:px-6">
    <h2
      class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-center mb-8"
    >
      Projects That Drive Business Growth
    </h2>
    <p class="mt-4 mb-8 text-neutral-300 text-center max-w-2xl mx-auto">
      Witness how I've helped various companies and entrepreneurs create
      powerful and functional digital experiences.
    </p>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        projects.map((project) => (
          <div class="bg-neutral-800 bg-opacity-30 overflow-hidden backdrop-filter backdrop-blur-sm relative rounded-lg">
            <Image
              src={`/placeholder.svg?height=200&width=300`}
              alt={`Project ${project}`}
              width={300}
              height={200}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 text-yellow-500">
                Project {project}
              </h3>
              <p class="text-neutral-300 mb-4">
                A sophisticated web solution that boosted client engagement by
                150% and streamlined operations.
              </p>
              <button class="w-full bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-2 px-4 rounded transition duration-300">
                View Case Study
              </button>
            </div>
          </div>
        ))
      }
    </div>
    <div class="mt-12 text-center">
      <button
        class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-md text-lg transition duration-300"
        >View All Projects</button
      >
    </div>
  </div>
</section>
