// src/pages/index.astro
import "../styles/globals.css";
import { Image } from "astro:assets";

const sprites = Array.from({ length: 15 }, (_, i) => ({
  id: i,
  style: {
    top: `${Math.random() * 100}%`,
    left: `${Math.random() * 100}%`,
    animationDelay: `${Math.random() * 5}s`,
  },
  size: ["sm", "md", "lg"][Math.floor(Math.random() * 3)],
}));

const services = [
  "High-Impact Website Creation",
  "Website Aesthetic Enhancement",
  "Custom Functionalities Development",
];
const projects = [1, 2, 3];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Marcial Fantini - Web Developer</title>
  </head>
  <body
    class="flex flex-col min-h-screen bg-gradient-to-br from-black via-neutral-900 to-neutral-800 text-white relative"
  >
    {
      sprites.map((sprite) => (
        <div
          class={`absolute ${sprite.size === "sm" ? "w-8 h-8" : sprite.size === "md" ? "w-12 h-12" : "w-16 h-16"} opacity-50 animate-pulse`}
          style={`top: ${sprite.style.top}; left: ${sprite.style.left}; animation-delay: ${sprite.style.animationDelay};`}
        >
          <div class="absolute inset-0 bg-green-400 rounded-full opacity-20 filter blur-md" />
          <div class="absolute inset-2 bg-green-400 rounded-full opacity-30 filter blur-sm" />
          <div class="absolute inset-4 bg-green-400 rounded-full opacity-40" />
